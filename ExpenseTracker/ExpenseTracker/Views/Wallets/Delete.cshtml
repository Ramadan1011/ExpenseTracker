@model ExpenseTracker.Application.ViewModels.Wallet.WalletViewModel
﻿
@{
    ViewData["Title"] = "Delete";
    Layout = null;
}

<h3>Are you sure you want to delete the <b style="color:red">@Model.Name</b> wallet?</h3>
<div>
    <hr/> 
    <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex justify-content-center">
            <button class="btn btn-secondary mx-2" asp-action="Index" style="width:99.49px" >Close</button>
            <button type="submit" class="btn btn-danger mx-2">Delete</button>
        </div>
    </form>
</div>


